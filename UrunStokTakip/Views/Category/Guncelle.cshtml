@model UrunStokTakip.Models.kategori
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@using(Html.BeginForm("Guncelle","Category", FormMethod.Post))
 {
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form class="form-group" method="post">

                    <div style="margin-bottom:15px">
                        @Html.LabelFor(x => x.ad)
                        @Html.TextBoxFor(x => x.ad , new { @class = "form-control"})
                    </div>
                    
                    <div style="margin-bottom:15px">
                        @Html.LabelFor(x => x.aciklama)
                        @Html.TextBoxFor(x => x.aciklama , new { @class = "form-control"})
                    </div>

                    <button class="btn btn-success"> Guncelle </button>

                </form>
            </div>
        </div>
    </div>
 }
