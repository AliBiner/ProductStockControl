@model UrunStokTakip.Models.urunler
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="ad" class="form-control" value="@Model.ad" />
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" name="aciklama" class="form-control" value="@Model.aciklama" />
                </div>

                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/Content/Icon/@Model.resim" width="80" height="80" />
                </div>

                <div class="form-group">
                    @Html.Label("Resim", new { @class = "control-label  col-md-2" })
                    <input type="file" name="File" />
                </div>

                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" name="stok" class="form-control" value="@Model.stok"/>
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" name="fiyat" class="form-control" value="@Model.fiyat" />
                </div>

                <div class="form-group">
                    @Html.Label("Popüler", new { @class = "control-label  col-md-2" })
                    @Html.EditorFor(x => x.populer)
                </div>

                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.kategoriID, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
                </div>

                <button class="btn btn-primary" type="submit">Güncelle</button>
                <a href="/Urun/Index">Ürün Listesi</a>
            </form>
           
        </div>

    </div>


</div>

