@using PagedList;
@using PagedList.Mvc;
@model IPagedList<UrunStokTakip.Models.satislar>
@{
    ViewBag.Title = "Index";
}

<h2>Satış Listesi</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
        
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.urunler.ad</td>
                <td>@item.adet</td>
                <td>@item.fiyat</td>
                <td><img src="~/Content/Icon/@item.urunler.resim" width="80" height="80"/></td>
                <td>@Convert.ToDateTime(item.tarih).ToString("dd/mm/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model , sayfa => Url.Action("Index" , new { sayfa}), PagedListRenderOptions.Classic)

